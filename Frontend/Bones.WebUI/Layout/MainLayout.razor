@inherits LayoutComponentBase

<MudThemeProvider/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <!-- Top Nav Bar -->
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer"/>
        <MudSpacer/>
        <MudButtonGroup Color="Color.Secondary" Variant="Variant.Filled">
            <AuthorizeView>
                <Authorized>
                    <MudButton Href="@FrontEndUrls.Account.MY_PROFILE">My Profile</MudButton>
                    <MudButton Href="@FrontEndUrls.Account.LOGOUT">Logout</MudButton>
                </Authorized>
                <NotAuthorized>
                    <MudButton Href="@FrontEndUrls.Account.LOGIN">Login</MudButton>
                    <MudButton Href="@FrontEndUrls.Account.REGISTER">Register</MudButton>
                </NotAuthorized>
            </AuthorizeView>
        </MudButtonGroup>
    </MudAppBar>
    <!-- Side Bar -->
    <MudDrawer @bind-Open="@_open" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Bones</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Match="NavLinkMatch.All" href="@FrontEndUrls.HOME">Home</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" href="/RequiresLogin">Requires Login</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <!-- Content -->
    <MudMainContent Class="pt-16 px-16">
        <MudContainer Class="mt-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code
{
    private bool _open = false;

    private void ToggleDrawer()
    {
        _open = !_open;
    }
}