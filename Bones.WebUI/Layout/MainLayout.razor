@inherits LayoutComponentBase


<MudThemeProvider/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer"/>
        <MudSpacer/>
        <MudButtonGroup Color="Color.Secondary" Variant="Variant.Filled">
            <AuthorizeView>
                <Authorized>
                    
                    <MudButton>My Profile</MudButton>
                    <MudButton>Logout</MudButton>
                    
                </Authorized>
                <NotAuthorized>
                    <MudButton OnClick="@GoToLoginPage">Login</MudButton>
                    <MudButton OnClick="@GoToRegistrationPage">Register</MudButton>
                </NotAuthorized>
            </AuthorizeView>
        </MudButtonGroup>
    </MudAppBar>
    <MudDrawer @bind-Open="@_open" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Bones</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Match="NavLinkMatch.All" href="/">Home</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" href="/RequiresLogin">Requires Login</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent Class="pt-16 px-16">
        <MudContainer Class="mt-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code
{
    private bool _open = false;

    private void ToggleDrawer()
    {
        _open = !_open;
    }

    private void GoToLoginPage()
    {
        NavManager.NavigateTo("/auth/login", true);
    }
    
    private void GoToRegistrationPage()
    {
        NavManager.NavigateTo("/auth/register", true);
    }
}